{% set template = config.get('@silexstarter-dashboard.config.template') %}
{% extends '@silexstarter-dashboard/'~ template ~'/index.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <i class="fa fa-fw fa-info"></i>
                    <h3 class="box-title">Dashboard Info</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                  </div>
                </div>
                <div class="box-body">
                    You can modify this page by running following command
                    <pre>php xpress module:publish-template silexstarter-dashboard</pre>

                    and start editing the following file
                    <pre>app/views/module/silexstarter-dashboard/default/dashboard.twig</pre>
                </div>
            </div>
        </div>
    </div>
{% endblock %}