<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>
            Log in
        </title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        {{
            stylesheet([
                "@silexstarter-dashboard/admin-lte/css/bootstrap.min.css",
                "@silexstarter-dashboard/admin-lte/css/font-awesome.min.css",
                "@silexstarter-dashboard/admin-lte/css/google-font.css",
                "@silexstarter-dashboard/admin-lte/css/AdminLTE.min.css",
                "@silexstarter-dashboard/admin-lte/plugins/iCheck/square/blue.css",
            ])
        }}
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                {% if config.get('@silexstarter-dashboard.config.use_logo') %}
                    <a href="#"><img
                        src="{{asset(config.get('@silexstarter-dashboard.config.logo'))}}"
                        alt="{{config.get('@silexstarter-dashboard.config.logo_alt')}}"
                        style="height: 35px; margin:5px auto auto"
                        class="logo-lg"
                    ></a>
                {% else %}
                    <a href="#">{{config.get('@silexstarter-dashboard.config.logo_alt') | raw }}</a>
                {% endif %}
            </div>
            <div class="login-box-body">
                <p class="login-box-msg">
                    {% if message  %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                        <hr>
                    {% endif %}
                </p>
                <form action="{{url_for('admin.authenticate')}}" method="post">
                    <input type="hidden" name="intended" value="{{ intended }}">
                    <div class="form-group has-feedback">
                        <input type="text" name="{{login_attr}}" class="form-control" placeholder="Login" value="{{ attribute(credetial, login_attr) | default }}">
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label><input type="checkbox" name="remember" id="remember" value="1" {% if remember %}checked{% endif %}> Remember Me</label>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                    </div>
                </form>
                {#
                <div class="social-auth-links text-center">
                    <p>
                        - OR -
                    </p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"> Sign in using Facebook</a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat"> Sign in using Google+</a>
                </div>
                <p class="text-center">
                    <a href="#">Forgot password</a> |
                    <a href="register.html">Register</a>
                </p>
                #}

            </div>
        </div>

        {{
            javascript([
                "@silexstarter-dashboard/admin-lte/plugins/jQuery/jQuery-2.1.4.min.js",
                "@silexstarter-dashboard/admin-lte/js/bootstrap.min.js",
                "@silexstarter-dashboard/admin-lte/plugins/iCheck/icheck.min.js",
            ])
        }}
        <script type="text/javascript">
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
    </body>
</html>